<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingVertical="30dp"
    tools:context=".user.MyPageFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="100dp"
        app:cardMaxElevation="5dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/basic_profile" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nickNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick Name"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_page_back" />

    <TextView
        android:id="@+id/boardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 활동"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp" />
    <LinearLayout
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pencil"
                />

            <TextView
                android:id="@+id/myWriteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내가 쓴 글"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"

                android:src="@drawable/pencil"
                />
            <TextView
                android:id="@+id/myListHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="찜한 병원"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myPhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pencil"
                />
            <TextView
                android:id="@+id/myListPhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="찜한 약국"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_page_back" />
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:padding="7dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/modiInfoText"
            android:padding="7dp"
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원정보 수정"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_page_back" />
        <TextView
            android:padding="7dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/changPassText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_page_back" />
        <TextView
            android:padding="7dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/logoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_page_back" />
        <TextView
            android:padding="7dp"
            android:layout_marginLeft="28dp"
            android:id="@+id/unregiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_page_back" />

    </LinearLayout>
</LinearLayout>