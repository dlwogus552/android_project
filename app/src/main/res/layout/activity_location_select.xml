<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/departSelect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".hospital.LocationSelectActivity">

    <Button
        android:id="@+id/btnCloseX"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_close_xbutton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="동을 입력하세요"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMyLocation"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:textSize="8sp"
            android:text="현재위치"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <EditText
                android:id="@+id/tvDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="동을 입력하세요"
                android:textSize="30sp"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>