<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/departSelect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".hospital.DepartSelectActivity">

    <Button
        android:id="@+id/btnCloseX"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_close_xbutton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="진료과를 선택하세요"
            android:textSize="30sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:columnCount="2"
            android:rowCount="11"

            >

            <Button
                android:id="@+id/btnDepAll"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="모두" />

            <Button
                android:id="@+id/btnDepDM"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="피부과" />

            <Button
                android:id="@+id/btnDepDN"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="치과" />


            <Button
                android:id="@+id/btnDepOPH"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="안과" />


            <Button
                android:id="@+id/btndepPS"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="성형외과" />


            <Button
                android:id="@+id/btnDepIM"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="내과" />


            <Button
                android:id="@+id/btnDepOM"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="한의원" />

            <Button
                android:id="@+id/btnDepPED"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="소아청소년과" />

            <Button
                android:id="@+id/btnDepOB"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="산부인과" />

            <Button
                android:id="@+id/btnDepENT"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="이비인후과" />

            <Button
                android:id="@+id/btnDepGH"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="종합병원" />

            <Button
                android:id="@+id/btnDepNS"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="신경외과" />

            <Button
                android:id="@+id/btnDepPY"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="정신건강의학과" />

            <Button
                android:id="@+id/btnDepURO"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="비뇨기과" />

            <Button
                android:id="@+id/btnDepOS"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="정형외과" />

            <Button
                android:id="@+id/btnDepGS"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="외과" />

            <Button
                android:id="@+id/btnDepNR"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="신경과" />

            <Button
                android:id="@+id/btnDepAN"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="마취통증의학과" />

            <Button
                android:id="@+id/btnDepRM"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="재활의학과" />

            <Button
                android:id="@+id/btnDepFM"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="가정의학과" />

            <Button
                android:id="@+id/btnDepRA"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:text="영상/검진의학과" />

            <Button
                android:id="@+id/btnDepCRS"
                android:layout_row="10"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="대장항문외과" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>